@using BolFood.core
@model Restaurant

    <div class="card">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <ul>
                <li>Cuisine : @Model.Cuisine</li>
                <li>Location : @Model.Location</li>
            </ul>
        </div>
        <div class="card-footer">
            <a asp-page="./Detail"
               asp-route-restaurantId="@Model.Id">
                Detail
            </a>
            <a asp-page="./Edit"
               asp-route-restaurantId="@Model.Id">
                Edit
            </a>
            <a asp-page="./Delete"
               asp-route-restaurantId="@Model.Id">
                Delete
            </a>
        </div>
    </div>