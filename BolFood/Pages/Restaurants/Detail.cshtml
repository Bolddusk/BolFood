@page "{restaurantId:int}"
@model BolFood.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.Restaurant.Name</h1>
<div>
    Id : @Model.Restaurant.Id
</div>
<div>
    Name : @Model.Restaurant.Name
</div>
<div>
    Cusine : @Model.Restaurant.Cuisine
</div>
<div>
    Location : @Model.Restaurant.Location
</div>

<div class="my-2">
    <a asp-page="./list" class="btn btn-info btn-sm">Restaurants</a>
</div>

@if (Model.Message != null)
{

        <div class="toast"  style="position: absolute; top: 1rem; right: 1rem;min-width:300px" data-delay="5000">
            <div class="toast-header">
                @*<img src="..." class="rounded mr-2" alt="...">*@
                <strong class="mr-auto">Notification</strong>
                <small>just now</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                @Model.Message
            </div>
        </div>
}

@section scripts{ 
<script>
    $(document).ready(function () {
        $('.toast').toast('show');
    });
    
</script>
}